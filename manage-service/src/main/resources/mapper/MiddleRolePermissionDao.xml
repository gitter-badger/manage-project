<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.quick.spring.boot.manage.dao.mapper.MiddleRolePermissionDao">
	<resultMap type="com.github.quick.spring.boot.manage.dao.entity.MiddleRolePermission" id="MiddleRolePermissionMap">
		<result property="id" column="id" jdbcType="INTEGER"/>
		<result property="roleId" column="role_id" jdbcType="INTEGER"/>
		<result property="permissionId" column="permission_id" jdbcType="INTEGER"/>
	</resultMap>

	<!--查询单个-->
	<select id="queryById" resultMap="MiddleRolePermissionMap">
		select
		id, role_id, permission_id
		from manager.middle_role_permission
		where id = #{id}
	</select>

	<!--查询指定行数据-->
	<select id="queryAllByLimit" resultMap="MiddleRolePermissionMap">
		select
		id, role_id, permission_id
		from manager.middle_role_permission
		limit #{offset}, #{limit}
	</select>

	<!--通过实体作为筛选条件查询-->
	<select id="queryAll" resultMap="MiddleRolePermissionMap">
		select
		id, role_id, permission_id
		from manager.middle_role_permission
		<where>
			<if test="id != null">
				and id = #{id}
			</if>
			<if test="roleId != null">
				and role_id = #{roleId}
			</if>
			<if test="permissionId != null">
				and permission_id = #{permissionId}
			</if>
		</where>
	</select>

	<!--新增所有列-->
	<insert id="insert" keyProperty="id" useGeneratedKeys="true">
		insert into manager.middle_role_permission(role_id, permission_id)
		values (#{roleId}, #{permissionId})
	</insert>

	<insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
		insert into manager.middle_role_permission(role_id, permission_id)
		values
		<foreach collection="entities" item="entity" separator=",">
			(#{entity.roleId}, #{entity.permissionId})
		</foreach>
	</insert>

	<insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
		insert into manager.middle_role_permission(role_id, permission_id)
		values
		<foreach collection="entities" item="entity" separator=",">
			(#{entity.roleId}, #{entity.permissionId})
		</foreach>
		on duplicate key update
		role_id = values(role_id) , permission_id = values(permission_id)
	</insert>

	<!--通过主键修改数据-->
	<update id="update">
		update manager.middle_role_permission
		<set>
			<if test="roleId != null">
				role_id = #{roleId},
			</if>
			<if test="permissionId != null">
				permission_id = #{permissionId},
			</if>
		</set>
		where id = #{id}
	</update>

	<!--通过主键删除-->
	<delete id="deleteById">
		delete from manager.middle_role_permission where id = #{id}
	</delete>
</mapper>